<UserControl x:Class="MiniYou_App.Views.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="520" d:DesignWidth="980">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,10">
            <TextBlock Text="Users"
                       FontSize="18"
                       FontWeight="Bold"
                       DockPanel.Dock="Left"/>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Charger" Width="90" Margin="0,0,8,0" Command="{Binding LoadCommand}"/>
                <Button Content="Nouveau" Width="90" Margin="0,0,8,0" Command="{Binding NewCommand}"/>
                <Button Content="Enregistrer" Width="95" Margin="0,0,8,0" Command="{Binding SaveCommand}"/>
                <Button Content="Supprimer" Width="90" Margin="0,0,8,0" Command="{Binding DeleteCommand}"/>
                <Button Content="Clear" Width="80" Command="{Binding ClearSelectionCommand}"/>
            </StackPanel>
        </DockPanel>

        <!-- Liste -->
        <Border Grid.Row="1" Grid.Column="0"
                BorderThickness="1"
                BorderBrush="#DDDDDD"
                CornerRadius="6"
                Padding="8"
                Margin="0,0,10,0">

            <StackPanel>
                <TextBlock Text="Liste" FontWeight="Bold" Margin="0,0,0,8"/>

                <DataGrid ItemsSource="{Binding Users}"
                          SelectedItem="{Binding SelectedUser}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          Height="380">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="70"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="150"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="220"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <!-- Détails -->
        <Border Grid.Row="1" Grid.Column="1"
                BorderThickness="1"
                BorderBrush="#DDDDDD"
                CornerRadius="6"
                Padding="10">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel DataContext="{Binding SelectedUser}">
                    <TextBlock Text="Détails" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Text="Id"/>
                    <TextBox Text="{Binding Id}" IsReadOnly="True" Margin="0,0,0,10"/>

                    <TextBlock Text="Name"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Username"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Email"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="DisplayName"/>
                    <TextBox Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="AvatarPath"/>
                    <TextBox Text="{Binding AvatarPath, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Bio"/>
                    <TextBox Text="{Binding Bio, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             Height="80"
                             TextWrapping="Wrap"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Website"/>
                    <TextBox Text="{Binding Website, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Twitter"/>
                    <TextBox Text="{Binding Twitter, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Instagram"/>
                    <TextBox Text="{Binding Instagram, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Footer -->
        <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="220"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding Error}"
                       Foreground="DarkRed"
                       TextWrapping="Wrap"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <ProgressBar Width="140"
                             Height="12"
                             IsIndeterminate="True"
                             Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"/>
                <TextBlock Text="  Chargement..."
                           VerticalAlignment="Center"
                           Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
